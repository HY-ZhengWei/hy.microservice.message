            <productId></productId>
        </account>
        
        
        <service id="MS_Message_Service_CTCC_51Welink">
            <constructor>
                <http    ref="MS_Message_XHttp_CTCC_51Welink" />
                <account ref="MS_Message_Account_CTCC_51Welink" />
            </constructor>
        </service>
        
    </xconfig>
    
</config>